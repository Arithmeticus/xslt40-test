<?xml version="1.0" encoding="UTF-8"?>
<test-set xmlns:xs="http://www.w3.org/2001/XMLSchema"
          xmlns="http://www.w3.org/2012/10/xslt-test-catalog"
          name="type-expr">
   <description>Tests type-expr</description>
   <environment name="type-expr-01">
      <source role="." file="type-expr-01.xml"/>
      <schema role="source-reference"
              file="variousTypesSchemaExpr.xsd"
              xsd-version="1.0"/>
   </environment>
   <environment name="type-expr-02">
      <source role="." file="type-expr-02.xml"/>
      <schema role="source-reference"
              file="variousTypesSchemaExpr.xsd"
              xsd-version="1.0"/>
   </environment>
   <environment name="type-expr-03">
      <source role="." file="type-expr-03.xml"/>
      <schema role="source-reference"
              file="variousTypesSchemaExpr.xsd"
              xsd-version="1.0"/>
   </environment>
   <environment name="type-expr-04">
      <source role="." file="type-expr-04.xml"/>
      <schema role="source-reference"
              file="variousTypesSchemaExpr.xsd"
              xsd-version="1.0"/>
   </environment>
   <dependencies>
      <feature value="schema_aware"/>
   </dependencies>

   <test-case name="type-expr-0101">
      <description>Test op:numeric-add where one operand is xs:decimal and the other is typed numeric value, either built-in or a user type derived by restriction from built-in numeric.</description>
      <created by="Michael Kay" on="2012-10-30"/>
      <environment ref="type-expr-01"/>
      <dependencies>
         <spec value="XSLT20+"/>
      </dependencies>
      <test>
         <stylesheet file="type-expr-0101.xsl"/>
      </test>
      <result>
         <assert-xml file="type-expr-0101.out"/>
      </result>
   </test-case>

   <test-case name="type-expr-0201">
      <description>Test op:bollean-equal where one operands are of type xs:boolean or a type derived by restriction from it; operands come from input file</description>
      <created by="Michael Kay" on="2012-10-30"/>
      <environment ref="type-expr-02"/>
      <dependencies>
         <spec value="XSLT20+"/>
      </dependencies>
      <test>
         <stylesheet file="type-expr-0201.xsl"/>
      </test>
      <result>
         <assert-xml><![CDATA[<out>
<types>truetruetruetruetruetrue</types>
<e1>true</e1>
<e2>false</e2>
<e3>true</e3>
<e4>false</e4>
<e5>true</e5>
<e6>false</e6></out>]]></assert-xml>
      </result>
   </test-case>

   <test-case name="type-expr-0301">
      <description>Test op:duration-equal ('eq') where the operands are of type xs:duration or a type derived by restriction from it; operands come from input file</description>
      <created by="Michael Kay" on="2012-10-30"/>
      <environment ref="type-expr-03"/>
      <dependencies>
         <spec value="XSLT20+"/>
      </dependencies>
      <test>
         <stylesheet file="type-expr-0301.xsl"/>
      </test>
      <result>
         <assert-xml><![CDATA[<out>
<types>truetruetruetruetruetruetruetruetrue</types>
<e1>true</e1>
<e2>false</e2>
<e3>true</e3>
<e4>true</e4>
<e5>false</e5></out>]]></assert-xml>
      </result>
   </test-case>

   <test-case name="type-expr-0401">
      <description>Test op:date-equal ('eq') where the operands are of type xs:date or a type derived by restriction from it; operands come from input file</description>
      <created by="Michael Kay" on="2012-10-30"/>
      <environment ref="type-expr-04"/>
      <dependencies>
         <spec value="XSLT20+"/>
      </dependencies>
      <test>
         <stylesheet file="type-expr-0401.xsl"/>
      </test>
      <result>
         <assert-xml><![CDATA[<out>
<types>truetruetruetruetruetruetruetruetrue</types>
<e1>true</e1>
<e2>false</e2>
<e3>true</e3>
<e4>true</e4>
<e5>false</e5></out>]]></assert-xml>
      </result>
   </test-case>
</test-set>
